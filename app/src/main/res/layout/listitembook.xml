<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/normalMargin"
    android:layout_width="180dp"
    app:cardCornerRadius="12dp"
    android:elevation="4dp"
    android:layout_height="wrap_content">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_margin="@dimen/smallMargin"
           android:layout_gravity="center"
           android:layout_height="wrap_content">

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/focus"
               android:layout_width="100dp"
               android:layout_height="100dp"
               android:layout_marginTop="@dimen/xxLargeMargin"
               android:background="@drawable/pribackround"
               android:gravity="center"
               android:text="C"
               android:fontFamily="@font/nunito_regular"
               android:textColor="@color/black"
               android:textSize="@dimen/pre_regular_text_size"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent">

           </androidx.appcompat.widget.AppCompatTextView>

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/bookName"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/headone"
               android:layout_marginTop="5dp"
               android:textStyle="bold"
               android:fontFamily="@font/solaiman_lipi"
               android:textColor="@color/black"
               android:textSize="@dimen/xxxxxSmallText"
               app:layout_constraintEnd_toEndOf="@+id/focus"
               app:layout_constraintStart_toStartOf="@+id/focus"
               app:layout_constraintTop_toBottomOf="@+id/focus">

           </androidx.appcompat.widget.AppCompatTextView>

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/bookAvailable"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/sub_head"
               android:textColor="@color/red"
               android:fontFamily="@font/nunito_regular"
               app:layout_constraintEnd_toStartOf="@+id/bookCount"
               app:layout_constraintHorizontal_chainStyle="packed"
               app:layout_constraintStart_toStartOf="@+id/bookName"
               app:layout_constraintTop_toBottomOf="@+id/bookName">

           </androidx.appcompat.widget.AppCompatTextView>

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/bookCount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="1"
               android:textColor="#DF0909"
               android:textSize="16dp"
               app:layout_constraintBottom_toBottomOf="@+id/bookAvailable"
               app:layout_constraintEnd_toEndOf="@+id/bookName"
               app:layout_constraintStart_toEndOf="@+id/bookAvailable"
               app:layout_constraintTop_toTopOf="@+id/bookAvailable">

           </androidx.appcompat.widget.AppCompatTextView>

           <androidx.appcompat.widget.AppCompatButton
               android:id="@+id/borrowButton"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/xxLargeMargin"
               android:layout_marginTop="@dimen/veryLargeMargin"
               android:layout_marginEnd="@dimen/xxLargeMargin"
               android:layout_marginBottom="@dimen/xSmallMargin"
               android:background="@drawable/redbackround"
               android:text="@string/btn"
               android:textAllCaps="false"
               android:textColor="@color/white"
               android:fontFamily="@font/nunito_regular"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/bookCount"
               app:layout_constraintVertical_bias="0.0">
           </androidx.appcompat.widget.AppCompatButton>

       </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>